---
import Container from "@shared/ui/Container.astro";
import Button from "@shared/ui/Button.astro";
import SectionLabel from "@shared/ui/SectionLabel.astro";
import CodeBlock from "@shared/ui/CodeBlock.astro";
import { hero } from "@shared/config/hero";

const { sectionLabel, headline, subheadline, ctas, terminal } = hero;

// Convert TerminalLine[] to string[] for CodeBlock
const terminalLines = terminal.lines.map((line) => line.text);
---

<section id="hero" class="py-32 md:py-40">
	<Container class="flex flex-col items-center text-center">
		{/* Section label */}
		<div class="mb-6">
			<SectionLabel text={sectionLabel} />
		</div>

		{/* Headline */}
		<h1
			class="font-sans text-[36px] md:text-[48px] lg:text-[64px] font-black leading-[1.1] tracking-[-0.02em] text-text max-w-[720px] mx-auto mb-6"
		>
			{headline}
		</h1>

		{/* Subheadline */}
		<p
			class="font-sans text-[16px] md:text-[18px] lg:text-[20px] font-normal leading-[1.5] text-text-secondary max-w-[600px] mx-auto mb-10"
		>
			{subheadline}
		</p>

		{/* CTA buttons */}
		<div class="flex flex-col md:flex-row items-center gap-4 mb-16 w-full md:w-auto">
			{ctas.map((cta) => (
				<Button variant={cta.variant} href={cta.href}>
					{cta.label}
				</Button>
			))}
		</div>

		{/* Terminal code block */}
		<div class="w-full max-w-[680px]">
			<CodeBlock lines={terminalLines} withGlow={true} />
		</div>
	</Container>
</section>
