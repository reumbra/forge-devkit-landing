---
import Container from "@shared/ui/Container.astro";
import SectionLabel from "@shared/ui/SectionLabel.astro";
import Card from "@shared/ui/Card.astro";
import { solution } from "@shared/config/solution";

const { sectionLabel, headline, closingLine, pillars } = solution;
---

<section id="solution" class="py-12 md:py-24 lg:py-32">
	<Container>
		{/* Section header */}
		<div class="fade-up mb-12 text-center">
			<SectionLabel text={sectionLabel} />
			<h2 class="mt-4 font-sans text-[32px] font-bold leading-[1.15] tracking-[-0.02em] text-text md:text-[40px] lg:text-[48px]">
				{headline}
			</h2>
		</div>

		{/* 3 pillar cards */}
		<div class="grid grid-cols-1 gap-6 md:grid-cols-3">
			{pillars.map((pillar) => (
				<Card>
					<div class="flex flex-col gap-4">
						{/* Diamond icon */}
						<span class="text-[32px] leading-none text-secondary" aria-hidden="true">
							&#9671;
						</span>

						{/* Pillar label */}
						<span class="inline-block font-mono text-[11px] font-medium uppercase leading-[1.4] tracking-[0.15em] text-secondary">
							{pillar.label}
						</span>

						{/* Headline */}
						<h3 class="font-sans text-[24px] font-semibold leading-[1.2] text-text">
							{pillar.headline}
						</h3>

						{/* Description */}
						<p class="font-sans text-[16px] leading-[1.6] text-text-secondary">
							{pillar.description}
						</p>
					</div>
				</Card>
			))}
		</div>

		{/* Closing line */}
		<p class="mt-12 text-center font-sans text-[18px] font-medium leading-[1.6] text-text">
			{closingLine.prefix}<code class="bg-inline-code rounded px-2 py-0.5 font-mono">{closingLine.highlight}</code>{closingLine.suffix}
		</p>
	</Container>
</section>
