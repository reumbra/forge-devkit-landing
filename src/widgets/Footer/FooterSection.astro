---
import Container from "@shared/ui/Container.astro";
import ReumbraLogo from "@shared/ui/ReumbraLogo.astro";
import { footer } from "@shared/config/footer";
---

<footer class="border-t border-[rgba(118,73,196,0.06)] py-12">
	<Container>
		<div class="flex flex-col gap-10 md:flex-row md:items-start md:justify-between">
			{/* Left — logo + company tagline */}
			<div>
				<div class="flex items-center gap-2">
					<ReumbraLogo size={18} class="text-secondary" />
					<span class="font-sans text-[16px] font-bold text-text">
						{footer.logo}
					</span>
				</div>
				<p class="mt-2 font-sans text-[14px] text-text-muted">
					{footer.companyTagline}
				</p>
			</div>

			{/* Right — nav links + legal links */}
			<div class="flex gap-12">
				{/* Nav links column */}
				<div class="flex flex-col gap-1">
					{
						footer.navLinks.map((link) => (
							<a
								href={link.href}
								class="inline-block py-3 font-sans text-[14px] text-text-muted transition-colors duration-300 hover:text-text"
							>
								{link.label}
							</a>
						))
					}
				</div>

				{/* Legal links column */}
				<div class="flex flex-col gap-1">
					{
						footer.legalLinks.map((link) => (
							<a
								href={link.href}
								class="inline-block py-3 font-sans text-[14px] text-text-muted transition-colors duration-300 hover:text-text"
							>
								{link.label}
							</a>
						))
					}
				</div>
			</div>
		</div>

		{/* Copyright */}
		<p class="mt-10 text-center font-sans text-[12px] text-text-muted">
			{footer.copyright}
		</p>
	</Container>
</footer>
